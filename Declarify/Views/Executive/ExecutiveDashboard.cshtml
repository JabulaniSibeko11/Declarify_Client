@model Declarify.Models.ViewModels.ExecutiveDashboardViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Executive Dashboard - Declarify</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="~/css/executivedashboardcss.css" rel="stylesheet" />
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="loader-spinner">
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
        </div>
        <p class="loader-text">Loading Executive Dashboard...</p>
        <p class="loader-subtext">Analyzing organizational compliance data</p>
    </div>

    <!-- Unified Header -->
    <header class="modern-header">
        <div class="header-container">
            <!-- Left Section: Branding -->
            <div class="header-left">
                <div class="brand-section">
                    <div class="brand-logo">
                        <div class="logo-circle">
                            <img src="~/images/declarify logo.png" alt="Declarify Logo" class="logo-img" />
                        </div>
                        <div class="brand-text">
                            <div class="brand-name">Declar</div>
                            <div class="brand-tagline">Compliance Hub</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Center Section: Breadcrumb -->
            <div class="header-center">
                <div class="dashboard-breadcrumb">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <span>Executive Dashboard</span>
                </div>
            </div>

            <!-- Right Section: Profile Dropdown -->
            <div class="header-right">
                <button class="employee-trigger" id="adminDropdownTrigger">
                    <div class="employee-avatar">@Model.Employee.Full_Name.Substring(0, 1).ToUpper()</div>
                    <div class="employee-info-compact">
                        <div class="employee-name">@Model.Employee.Full_Name</div>
                        <div class="employee-role">
                            <span class="role-badge">Executive</span>
                        </div>
                    </div>
                    <svg class="dropdown-arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <polyline points="6 9 12 15 18 9" />
                    </svg>
                </button>

                <!-- Dropdown Menu -->
                <div class="admin-dropdown" id="adminDropdown">
                    <div class="dropdown-header">
                        <div class="dropdown-avatar">@Model.Employee.Full_Name.Substring(0, 1).ToUpper()</div>
                        <div>
                            <h4>@Model.Employee.Full_Name</h4>
                            <p>@Model.Employee.Email_Address</p>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <div class="dropdown-section-label">Switch View</div>
                        <a href="@Url.Action("ExecutiveDashboard", "Executive")" class="dropdown-item active">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                            <span>Executive Dashboard</span>
                            <span class="dropdown-badge">Analytics</span>
                        </a>
                        <a href="@Url.Action("Dashboard", "Employee")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span>My Dashboard</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="@Url.Action("Profile", "Employee")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span>My Profile</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="@Url.Action("Logout", "Home")" class="dropdown-item logout">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Executive Hero Section -->
    <div class="executive-hero" style="--compliance-rate: @Model.OverallStats.ComplianceRate;">
        <div class="hero-content">
            <div class="hero-text">
                <div class="executive-badge">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Executive Overview
                </div>
                <h1 class="hero-title">
                    Organizational <span class="accent">Compliance</span><br>
                    at a Glance
                </h1>
                <p class="hero-subtitle">
                    Real-time insights, comprehensive analytics, and actionable intelligence
                    across all departments and regions.
                </p>
                <div class="hero-stats">
                    <div class="hero-stat">
                        <div class="hero-stat-value">@Model.OverallStats.TotalEmployees</div>
                        <div class="hero-stat-label">Total Employees</div>
                    </div>
                    <div class="hero-stat">
                        <div class="hero-stat-value">@Model.DepartmentStats.Count()</div>
                        <div class="hero-stat-label">Departments</div>
                    </div>
                    <div class="hero-stat">
                        <div class="hero-stat-value">@Model.OverallStats.TotalSubmissions</div>
                        <div class="hero-stat-label">Submissions</div>
                    </div>
                </div>
            </div>
            <div class="hero-visual">
                <div class="compliance-ring">
                    <div class="ring-bg"></div>
                    <div class="ring-inner">
                        <div class="ring-value">@Model.OverallStats.ComplianceRate.ToString("F0")%</div>
                        <div class="ring-label">Compliance Rate</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Dashboard Container -->
    <div class="dashboard-container">
        <!-- KPI Grid -->
        <div class="kpi-grid">
            <div class="kpi-card success">
                <div class="kpi-header">
                    <div class="kpi-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    @{
                        var targetDiff = 95 - Model.OverallStats.ComplianceRate;
                    }
                    <div class="kpi-trend @(targetDiff <= 0 ? "up" : "down")">
                        @(targetDiff <= 0 ? "✓ Target Met" : $"{targetDiff:F1}% to go")
                    </div>
                </div>
                <div class="kpi-label">Compliance Rate</div>
                <div class="kpi-value">@Model.OverallStats.ComplianceRate.ToString("F1")%</div>
                <div class="kpi-subtitle">Target: 95% compliance</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-header">
                    <div class="kpi-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div class="kpi-trend up">
                        @((Model.OverallStats.CompliantCount / (double)Model.OverallStats.TotalEmployees * 100).ToString("F0"))%
                    </div>
                </div>
                <div class="kpi-label">Compliant Employees</div>
                <div class="kpi-value">@Model.OverallStats.CompliantCount</div>
                <div class="kpi-subtitle">of @Model.OverallStats.TotalEmployees total</div>
            </div>

            <div class="kpi-card warning">
                <div class="kpi-header">
                    <div class="kpi-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <div class="kpi-label">Outstanding</div>
                <div class="kpi-value">@Model.OverallStats.OutstandingCount</div>
                <div class="kpi-subtitle">@((Model.OverallStats.OutstandingCount / (double)Model.OverallStats.TotalEmployees * 100).ToString("F1"))% pending</div>
            </div>

            <div class="kpi-card danger">
                <div class="kpi-header">
                    <div class="kpi-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                        </svg>
                    </div>
                    @if (Model.OverallStats.OverdueCount > 0)
                    {
                        <div class="kpi-trend down">Critical</div>
                    }
                </div>
                <div class="kpi-label">Overdue</div>
                <div class="kpi-value">@Model.OverallStats.OverdueCount</div>
                <div class="kpi-subtitle">Requires immediate action</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-header">
                    <div class="kpi-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                </div>
                <div class="kpi-label">Avg. Submission Time</div>
                <div class="kpi-value">@Model.OverallStats.AverageSubmissionDays.ToString("F1")</div>
                <div class="kpi-subtitle">days from request</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-header">
                    <div class="kpi-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                </div>
                <div class="kpi-label">Total Submissions</div>
                <div class="kpi-value">@Model.OverallStats.TotalSubmissions</div>
                <div class="kpi-subtitle">this period</div>
            </div>
        </div>

        <!-- Analytics Grid -->
        <div class="analytics-grid">
            <!-- Department Compliance Chart -->
            <div class="analytics-card large">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Compliance by Department</h3>
                        <p class="card-subtitle">Breakdown across organizational units</p>
                    </div>
                    <button class="btn-icon-only">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                        </svg>
                    </button>
                </div>
                <div class="card-content">
                    <canvas id="departmentChart" height="80"></canvas>
                </div>
            </div>

            <!-- Risk Heat Map -->
            <div class="analytics-card small">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Risk Heat Map</h3>
                        <p class="card-subtitle">Priority areas</p>
                    </div>
                </div>
                <div class="card-content">
                    <div class="risk-grid">
                        @foreach (var dept in Model.DepartmentStats.OrderByDescending(d => d.OverdueCount).Take(5))
                        {
                            var riskLevel = dept.OverdueCount > 10 ? "high" : dept.OverdueCount > 5 ? "medium" : "low";
                            <div class="risk-item risk-@riskLevel">
                                <div class="risk-dept">@dept.DepartmentName</div>
                                <div class="risk-count">@dept.OverdueCount overdue</div>
                                <div class="risk-bar">
                                    <div class="risk-fill" style="width: @(Math.Min(dept.OverdueCount * 10, 100))%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Trend Analysis -->
            <div class="analytics-card large">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Compliance Trend</h3>
                        <p class="card-subtitle">Submission pattern over time</p>
                    </div>
                    <div class="time-selector">
                        <button class="time-btn active">7D</button>
                        <button class="time-btn">30D</button>
                        <button class="time-btn">90D</button>
                    </div>
                </div>
                <div class="card-content">
                    <canvas id="trendChart" height="80"></canvas>
                </div>
            </div>

            <!-- Top Performers -->
            <div class="analytics-card small">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Top Performing Units</h3>
                        <p class="card-subtitle">Excellence achieved</p>
                    </div>
                </div>
                <div class="card-content">
                    <div class="performer-list">
                        @foreach (var dept in Model.DepartmentStats.Where(d => d.ComplianceRate >= 95).OrderByDescending(d => d.ComplianceRate).Take(5))
                        {
                            <div class="performer-item">
                                <div class="performer-icon">
                                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                                    </svg>
                                </div>
                                <div class="performer-details">
                                    <div class="performer-name">@dept.DepartmentName</div>
                                    <div class="performer-stat">@dept.ComplianceRate.ToString("F0")% • @dept.TotalEmployees employees</div>
                                </div>
                                <div class="performer-badge success">✓</div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Department Breakdown Table -->
            <div class="analytics-card full">
                <div class="card-header">
                    <div>
                        <h3 class="card-title">Department Breakdown</h3>
                        <p class="card-subtitle">Complete organizational overview with drill-down capabilities</p>
                    </div>
                    <div class="card-actions">
                        <button class="btn btn-ghost">
                            <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Export Report
                        </button>
                        <button class="btn btn-secondary">
                            <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                            </svg>
                            Filter
                        </button>
                    </div>
                </div>
                <div class="card-content">
                    <div class="executive-table-wrapper">
                        <table class="executive-table">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th class="text-center">Total Staff</th>
                                    <th class="text-center">Compliant</th>
                                    <th class="text-center">Outstanding</th>
                                    <th class="text-center">Overdue</th>
                                    <th>Compliance Rate</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dept in Model.DepartmentStats.OrderByDescending(d => d.ComplianceRate))
                                {
                                    var statusClass = dept.ComplianceRate >= 95 ? "success" : dept.ComplianceRate >= 80 ? "warning" : "danger";
                                    <tr>
                                        <td>
                                            <div class="table-dept">
                                                <div class="dept-icon">
                                                    @dept.DepartmentName.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <div class="dept-name">@dept.DepartmentName</div>
                                                    <div class="dept-meta">@dept.TotalEmployees employees</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="table-value">@dept.TotalEmployees</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="table-badge success">@dept.CompliantCount</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="table-badge warning">@dept.OutstandingCount</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="table-badge danger">@dept.OverdueCount</span>
                                        </td>
                                        <td>
                                            <div class="progress-cell">
                                                <div class="progress-bar">
                                                    <div class="progress-fill @statusClass" style="width: @dept.ComplianceRate%"></div>
                                                </div>
                                                <span class="progress-text">@dept.ComplianceRate.ToString("F1")%</span>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="status-badge @statusClass">
                                                @if (dept.ComplianceRate >= 95)
                                                {
                                                    <span>✓ Compliant</span>
                                                }
                                                else if (dept.ComplianceRate >= 80)
                                                {
                                                    <span>⚠ Monitor</span>
                                                }
                                                else
                                                {
                                                    <span>⚠ Action Required</span>
                                                }
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn-icon-only" title="View Details">
                                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                </svg>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Page Loader
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('pageLoader').classList.add('hidden');
            }, 1000);
        });

        // Dropdown Toggle
        const adminDropdownTrigger = document.getElementById('adminDropdownTrigger');
        const adminDropdown = document.getElementById('adminDropdown');

        adminDropdownTrigger.addEventListener('click', function(e) {
            e.stopPropagation();
            adminDropdown.classList.toggle('active');
        });

        document.addEventListener('click', function(e) {
            if (!adminDropdownTrigger.contains(e.target) && !adminDropdown.contains(e.target)) {
                adminDropdown.classList.remove('active');
            }
        });

        // Department Compliance Chart
        const deptCtx = document.getElementById('departmentChart').getContext('2d');
        new Chart(deptCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.DepartmentStats.Select(d => "'" + d.DepartmentName + "'")))],
                datasets: [
                    {
                        label: 'Compliant',
                        data: [@Html.Raw(string.Join(",", Model.DepartmentStats.Select(d => d.CompliantCount)))],
                        backgroundColor: '#10B981',
                        borderRadius: 8,
                        barThickness: 40
                    },
                    {
                        label: 'Outstanding',
                        data: [@Html.Raw(string.Join(",", Model.DepartmentStats.Select(d => d.OutstandingCount)))],
                        backgroundColor: '#F59E0B',
                        borderRadius: 8,
                        barThickness: 40
                    },
                    {
                        label: 'Overdue',
                        data: [@Html.Raw(string.Join(",", Model.DepartmentStats.Select(d => d.OverdueCount)))],
                        backgroundColor: '#EF4444',
                        borderRadius: 8,
                        barThickness: 40
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        stacked: true,
                        grid: { display: false },
                        ticks: {
                            font: { size: 12, family: 'Inter' }
                        }
                    },
                    y: {
                        stacked: true,
                        beginAtZero: true,
                        grid: { color: '#E2E8F0' },
                        ticks: {
                            font: { size: 12, family: 'Inter' }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true,
                            font: { size: 13, family: 'Inter', weight: '500' }
                        }
                    }
                }
            }
        });

        // Trend Chart
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6', 'Week 7'],
                datasets: [{
                    label: 'Compliance Rate',
                    data: [65, 72, 78, 85, 88, 91, @Model.OverallStats.ComplianceRate],
                    borderColor: '#00C2CB',
                    backgroundColor: 'rgba(0, 194, 203, 0.1)',
                    borderWidth: 4,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 6,
                    pointHoverRadius: 8,
                    pointBackgroundColor: '#FFFFFF',
                    pointBorderColor: '#00C2CB',
                    pointBorderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: false,
                        min: 60,
                        max: 100,
                        grid: { color: '#E2E8F0' },
                        ticks: {
                            callback: function(value) {
                                return value + '%';
                            },
                            font: { size: 12, family: 'Inter' }
                        }
                    },
                    x: {
                        grid: { display: false },
                        ticks: {
                            font: { size: 12, family: 'Inter' }
                        }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#081B38',
                        padding: 12,
                        titleFont: { size: 13, family: 'Inter', weight: '600' },
                        bodyFont: { size: 12, family: 'Inter' },
                        borderColor: '#00C2CB',
                        borderWidth: 1
                    }
                }
            }
        });

        // Animate progress bars on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const fills = entry.target.querySelectorAll('.progress-fill');
                    fills.forEach(fill => {
                        const width = fill.style.width;
                        fill.style.width = '0';
                        setTimeout(() => {
                            fill.style.width = width;
                        }, 100);
                    });
                }
            });
        }, observerOptions);

        document.querySelectorAll('.executive-table').forEach(table => {
            observer.observe(table);
        });
    </script>
</body>
