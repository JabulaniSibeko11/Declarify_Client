                            <div class="overall-progress-fill" id="overallProgressFill"></div>
                        </div>
                    </div>

                    <!-- Import Stats -->
                    <div class="import-stats">
                        <div class="import-stat">
                            <div class="import-stat-value" id="importedCount">0</div>
