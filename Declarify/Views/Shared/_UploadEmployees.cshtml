                        <div class="stage-item" id="stage3">
                            <div class="stage-icon">
                                <svg class="stage-icon-svg" width="32" height="32" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path d="M5 13l4 4L19 7" />
                                </svg>
                                <svg class="stage-check" width="32" height="32" fill="none" stroke="#10B981" stroke-width="3" viewBox="0 0 24 24" style="display: none;">
                                    <path d="M5 13l4 4L19 7" />
