                            <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4" />
                            <polyline points="7 10 12 15 17 10" />
                            <line x1="12" y1="15" x2="12" y2="3" />
                        </svg>
                        Download Excel Template
                    </a>
                </div>
            </div>

            <!-- Step 2: File Analysis & Preview -->
            <div id="previewStep" class="import-step" style="display: none;">
                <!-- File Upload Progress -->
                <div class="file-upload-progress" id="fileUploadProgress">
                    <div class="progress-header-mini">
                        <div class="progress-icon-mini">
                            <svg class="icon-uploading" width="24" height="24" fill="none" stroke="#00C2CB" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                            </svg>
                            <svg class="icon-success" width="24" height="24" fill="none" stroke="#10B981" stroke-width="2" viewBox="0 0 24 24" style="display: none;">
                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div class="progress-text-mini">
                            <h4 id="uploadProgressTitle">Uploading File...</h4>
                            <p id="uploadProgressSubtitle">Please wait</p>
                        </div>
                    </div>

                    <div class="mini-progress-bar">
                        <div class="mini-progress-fill" id="uploadProgressFill"></div>
                    </div>
                    <div class="mini-progress-percentage" id="uploadProgressPercentage">0%</div>
                </div>

                <!-- File Info Card -->
                <div class="file-info-card" id="fileInfoCard" style="display: none;">
                    <div class="file-info-icon">
                        <svg width="48" height="48" fill="none" stroke="#00C2CB" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z" />
                            <polyline points="14 2 14 8 20 8" />
                            <line x1="12" y1="11" x2="12" y2="17" />
                            <line x1="9" y1="14" x2="15" y2="14" />
                        </svg>
                    </div>
                    <div class="file-info-details">
                        <h4 id="fileName">employees.xlsx</h4>
                        <p id="fileSize">245 KB</p>
                    </div>
                    <button type="button" class="btn-change-file" onclick="changeFile()">
                        <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        Change File
                    </button>
                </div>

                <!-- Employee Preview Summary -->
                <div class="employee-preview-summary" id="employeePreviewSummary" style="display: none;">
                    <div class="summary-header-main">
                        <div class="summary-icon-main">
                            <svg width="28" height="28" fill="none" stroke="#00C2CB" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3>File Analysis Complete</h3>
                            <p>Review the employees before importing</p>
                        </div>
                    </div>

                    <div class="preview-stats-grid">
                        <div class="preview-stat-card primary">
                            <div class="stat-icon-preview">
                                <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <div class="stat-content-preview">
                                <div class="stat-value-preview" id="totalEmployeesCount">0</div>
