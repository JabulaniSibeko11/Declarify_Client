                            <div class="import-stat-value" id="totalImportCount">0</div>
                            <div class="import-stat-label">Total</div>
                        </div>
                        <div class="import-stat success">
                            <div class="import-stat-value" id="successCount">100%</div>
                            <div class="import-stat-label">Success Rate</div>
                        </div>
                    </div>

                    <!-- Live Status Messages -->
                    <div class="status-messages-container">
                        <div class="status-messages-header">
                            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Activity Log
                        </div>
                        <div class="status-messages-list" id="statusMessagesList">
                            <!-- Dynamic messages will appear here -->
                        </div>
                    </div>
                </div>
