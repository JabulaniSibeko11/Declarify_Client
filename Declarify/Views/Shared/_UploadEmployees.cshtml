<style>
    /* ============================================================================
       CSV INFO BLOCK
       ============================================================================ */

    .csv-info {
        background: linear-gradient(135deg, rgba(0, 194, 203, 0.05) 0%, rgba(0, 229, 255, 0.03) 100%);
        border: 2px solid rgba(0, 194, 203, 0.2);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        color: var(--color-primary);
        margin-bottom: 1.25rem;
        font-size: 1.125rem;
    }

        .info-header svg {
            color: var(--color-accent);
            flex-shrink: 0;
        }

    .csv-info ul {
        list-style: none;
        padding: 0;
        margin: 0 0 1.5rem 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

        .csv-info ul li {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            background: white;
            border-radius: 10px;
            border-left: 3px solid var(--color-accent);
            font-size: 0.9375rem;
            color: var(--color-text-main);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }

            .csv-info ul li:hover {
                transform: translateX(4px);
                box-shadow: 0 4px 15px rgba(0, 194, 203, 0.1);
            }

            .csv-info ul li::before {
                content: '•';
                color: var(--color-accent);
                font-weight: 700;
                font-size: 1.25rem;
                flex-shrink: 0;
                line-height: 1.5;
            }

            .csv-info ul li strong {
                color: var(--color-primary);
                font-weight: 700;
            }

    .download-template {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.5rem;
        background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-glow) 100%);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9375rem;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 4px 20px rgba(0, 194, 203, 0.3);
        position: relative;
        overflow: hidden;
    }

        .download-template::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0);
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .download-template:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 194, 203, 0.4);
        }

            .download-template:hover::before {
                transform: translate(-50%, -50%) scale(1.5);
            }

        .download-template svg {
            flex-shrink: 0;
            transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .download-template:hover svg {
            transform: translateY(2px);
        }

    /* ============================================================================
       RESPONSIVE DESIGN
       ============================================================================ */
</style>
<!-- Add Employee Modal with Toggle and Dynamic Manager Dropdown -->
<div class="modal-overlay" id="addEmployeeModal">
    <div class="modal-container">
        <div class="modal-header">
            <h2>Add Employees</h2>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>

        <!-- Toggle Switcher -->
        <div class="modal-toggle">
            <button class="toggle-btn active" id="singleBtn" onclick="switchMode('single')">
                <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" />
                    <circle cx="8.5" cy="7" r="4" />
                     <line x1="20" y1="8" x2="20" y2="14" />
                    <line x1="23" y1="11" x2="17" y2="11" />
                </svg>
                Single Employee
            </button>
            <button class="toggle-btn" id="bulkBtn" onclick="switchMode('bulk')">
                <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <line x1="12" y1="18" x2="12" y2="12" />
                    <line x1="9" y1="15" x2="15" y2="15" />
                </svg>
                Bulk Import (Excel)
            </button>
        </div>

        <!-- Single Employee Form -->
        <form asp-action="CreateEmployee" asp-controller="Home" method="post" class="modal-form" id="singleForm" onsubmit="return validateForm()">
            @Html.AntiForgeryToken()

            <div class="form-grid">
                <div class="form-group">
                    <label>Employee Number <span class="required">*</span></label>
                    <input type="text"
                           name="EmployeeNumber"
                           id="employeeNumber"
                           required
                           placeholder="EMP001"
                           onblur="checkEmployeeNumber(this.value)" />
                    <span class="validation-message" id="employeeNumberValidation"></span>
                </div>

                <div class="form-group">
                    <label>Full Name <span class="required">*</span></label>
                    <input type="text"
                           name="Full_Name"
                           id="fullName"
                           required
                           placeholder="John" />
                </div>

                <div class="form-group">
                    <label>Surname <span class="required">*</span></label>
                    <input type="text"
                           name="Surname_Name"
                           id="surname"
                           required
                           placeholder="Doe" />
                </div>

                <div class="form-group">
                    <label>Email Address <span class="required">*</span></label>
                    <input type="email"
                           name="Email"
                           id="email"
                           required
                           placeholder="john.doe@company.org"
                           onblur="checkEmail(this.value)" />
                    <span class="validation-message" id="emailValidation"></span>
                </div>

                <div class="form-group">
                    <label>Position <span class="required">*</span></label>
                    <input type="text"
                           name="Position"
                           id="position"
                           required
                           placeholder="Senior Manager"
                           onblur="updateManagerDropdown()" />
                </div>

                <div class="form-group">
                    <label>Department <span class="required">*</span></label>
                    <input type="text"
                           name="Department"
                           id="department"
                           required
                           placeholder="Finance"
                           onblur="updateManagerDropdown()" />
                </div>

                <div class="form-group full-width">
                    <label>
                        Line Manager (Optional)
                        <span class="info-tooltip" title="Select the direct supervisor for this employee">ℹ️</span>
                    </label>
                    <select name="ManagerId" id="managerDropdown" class="manager-select">
                        <option value="">-- No Manager / CEO Level --</option>
                    </select>
                    <span class="help-text">Managers are filtered based on position and department</span>
                </div>

                <div class="form-group">
                    <label>Region (Optional)</label>
                    <input type="text"
                           name="Region"
                           id="region"
                           placeholder="e.g., North America, EMEA" />
                </div>

                <div class="form-group">
                    <label>Domain (Optional)</label>
                    <input type="number"
                           name="DomainId"
                           id="domainId"
                           placeholder="Leave empty if not applicable" />
                </div>
            </div>

            <div class="form-summary" id="formSummary" style="display: none;">
                <div class="summary-header">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M22 11.08V12a10 10 0 11-5.93-9.14" />
                        <polyline points="22 4 12 14.01 9 11.01" />
                    </svg>
                    <span>Review Employee Details</span>
                </div>
                <div id="summaryContent"></div>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn btn-primary" onclick="closeModal()">Cancel</button>
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M12 4v16m8-8H4" />
                    </svg>
                    Add Employee
                </button>
            </div>
        </form>

        <!-- Bulk Import Form -->
        <!-- Bulk Import Form - REDESIGNED FOR BETTER UX -->
