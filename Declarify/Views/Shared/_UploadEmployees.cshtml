<!-- Add Employee Modal with Toggle and Dynamic Manager Dropdown -->
<div class="modal-overlay" id="addEmployeeModal">
    <div class="modal-container">
        <div class="modal-header">
            <h2>Add Employees</h2>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>

        <!-- Toggle Switcher -->
        <div class="modal-toggle">
            <button class="toggle-btn active" id="singleBtn" onclick="switchMode('single')">
                <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" />
                    <circle cx="8.5" cy="7" r="4" />
                    <line x1="20" y1="8" x2="20" y2="14" />
                    <line x1="23" y1="11" x2="17" y2="11" />
                </svg>
                Single Employee
            </button>
            <button class="toggle-btn" id="bulkBtn" onclick="switchMode('bulk')">
                <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <line x1="12" y1="18" x2="12" y2="12" />
                    <line x1="9" y1="15" x2="15" y2="15" />
                </svg>
                Bulk Import (Excel)
            </button>
        </div>

        <!-- Single Employee Form -->
        <form asp-action="CreateEmployee" asp-controller="Home" method="post" class="modal-form" id="singleForm" onsubmit="return validateForm()">
            @Html.AntiForgeryToken()

            <div class="form-grid">
                <div class="form-group">
                    <label>Employee Number <span class="required">*</span></label>
                    <input type="text"
                           name="EmployeeNumber"
                           id="employeeNumber"
                           required
                           placeholder="EMP001"
                           onblur="checkEmployeeNumber(this.value)" />
                    <span class="validation-message" id="employeeNumberValidation"></span>
                </div>

                <div class="form-group">
                    <label>Full Name <span class="required">*</span></label>
                    <input type="text"
                           name="Full_Name"
                           id="fullName"
                           required
                           placeholder="John" />
                </div>

                <div class="form-group">
                    <label>Surname <span class="required">*</span></label>
                    <input type="text"
                           name="Surname_Name"
                           id="surname"
                           required
                           placeholder="Doe" />
                </div>

                <div class="form-group">
                    <label>Email Address <span class="required">*</span></label>
                    <input type="email"
                           name="Email"
                           id="email"
                           required
                           placeholder="john.doe@company.org"
                           onblur="checkEmail(this.value)" />
                    <span class="validation-message" id="emailValidation"></span>
                </div>

                <div class="form-group">
                    <label>Position <span class="required">*</span></label>
                    <input type="text"
                           name="Position"
                           id="position"
                           required
                           placeholder="Senior Manager"
                           onblur="updateManagerDropdown()" />
                </div>

                <div class="form-group">
                    <label>Department <span class="required">*</span></label>
                    <input type="text"
                           name="Department"
                           id="department"
                           required
                           placeholder="Finance"
                           onblur="updateManagerDropdown()" />
                </div>

                <div class="form-group full-width">
                    <label>
                        Line Manager (Optional)
                        <span class="info-tooltip" title="Select the direct supervisor for this employee">ℹ️</span>
                    </label>
                    <select name="ManagerId" id="managerDropdown" class="manager-select">
                        <option value="">-- No Manager / CEO Level --</option>
                    </select>
                    <span class="help-text">Managers are filtered based on position and department</span>
                </div>

                <div class="form-group">
                    <label>Region (Optional)</label>
                    <input type="text"
                           name="Region"
                           id="region"
                           placeholder="e.g., North America, EMEA" />
                </div>

                <div class="form-group">
                    <label>Domain (Optional)</label>
                    <input type="number"
                           name="DomainId"
                           id="domainId"
                           placeholder="Leave empty if not applicable" />
                </div>
            </div>

            <div class="form-summary" id="formSummary" style="display: none;">
                <div class="summary-header">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M22 11.08V12a10 10 0 11-5.93-9.14" />
                        <polyline points="22 4 12 14.01 9 11.01" />
                    </svg>
                    <span>Review Employee Details</span>
                </div>
                <div id="summaryContent"></div>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn btn-ghost" onclick="closeModal()">Cancel</button>
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M12 4v16m8-8H4" />
                    </svg>
                    Add Employee
                </button>
            </div>
        </form>

        <!-- Bulk Import Form -->
        <form asp-action="ImportEmployees" asp-controller="Home" method="post" enctype="multipart/form-data" class="modal-form" id="bulkForm" style="display: none;">
            @Html.AntiForgeryToken()

            <div class="upload-area" id="uploadArea" onclick="document.getElementById('excelFileInput').click()">
                <div class="upload-icon">📊</div>
                <h3>Upload Excel File</h3>
                <p>Drag and drop your Excel file here or click to browse</p>

                <input type="file"
                       name="excelFile"
                       id="excelFileInput"
                       accept=".xlsx,.xls"
                       required
                       hidden
                       onchange="handleFileSelect(event)" />

                <button type="button"
                        class="btn btn-ghost"
                        onclick="event.stopPropagation(); document.getElementById('excelFileInput').click();">
                    Choose File
                </button>

                <div class="file-preview" id="filePreview"></div>
            </div>

            <!-- Upload Progress Container -->
            <div class="upload-progress-container" id="uploadProgressContainer" style="display: none;">
                <div class="progress-header">
                    <div class="progress-icon-container">
                        <svg class="progress-icon animate-pulse" width="40" height="40" fill="none" stroke="#00C2CB" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                        </svg>
                    </div>
                    <h3 id="progressTitle">Uploading Employees...</h3>
                    <p id="progressSubtitle">Please wait while we process your file</p>
                </div>

                <div class="progress-stats">
                    <div class="stat-card">
                        <div class="stat-number" id="uploadedCount">0</div>
                        <div class="stat-label">Employees Uploaded</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="totalCount">0</div>
                        <div class="stat-label">Total in File</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number" id="successRate">0%</div>
                        <div class="stat-label">Success Rate</div>
                    </div>
                </div>

                <div class="progress-bar-container">
                    <div class="progress-bar-track">
                        <div class="progress-bar-fill" id="progressBarFill"></div>
                    </div>
                    <div class="progress-percentage" id="progressPercentage">0%</div>
                </div>

                <div class="upload-status-messages" id="statusMessages">
                    <!-- Dynamic status messages will appear here -->
                </div>
            </div>

            <!-- Success Summary -->
            <div class="upload-success-container" id="uploadSuccessContainer" style="display: none;">
                <div class="success-icon-container">
                    <svg class="success-icon" width="80" height="80" fill="none" stroke="#10B981" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h3 class="success-title">Upload Complete!</h3>
                <p class="success-message" id="successMessage"></p>

                <div class="success-stats">
                    <div class="success-stat-card">
                        <div class="success-stat-icon">✓</div>
                        <div class="success-stat-number" id="finalSuccessCount">0</div>
                        <div class="success-stat-label">Successfully Added</div>
                    </div>
                    <div class="success-stat-card warning">
                        <div class="success-stat-icon">⚠</div>
                        <div class="success-stat-number" id="finalErrorCount">0</div>
                        <div class="success-stat-label">Errors</div>
                    </div>
                </div>

                <button type="button" class="btn btn-primary" onclick="closeModalAndRefresh()">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M5 13l4 4L19 7" />
                    </svg>
                    Done
                </button>
            </div>

            <div class="csv-info">
                <div class="info-header">
                    <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" />
                        <line x1="12" y1="16" x2="12" y2="12" />
                        <line x1="12" y1="8" x2="12.01" y2="8" />
                    </svg>
                    <span>Excel Format Requirements</span>
                </div>
                <ul>
                    <li><strong>File Type:</strong> .xlsx or .xls format</li>
                    <li><strong>Required Columns:</strong> EmployeeNumber, Full_Name, Surname_Name, Email, Position, Department</li>
                    <li><strong>Optional Columns:</strong> ManagerId, Region, DomainId</li>
                    <li><strong>Example Row:</strong> EMP001 | John | Doe | john.doe@company.org | Senior Manager | Finance</li>
                    <li>Each employee will receive login credentials via email</li>
                </ul>
                <a href="@Url.Action("DownloadEmployeeTemplate", "Home")" class="download-template">
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4" />
                        <polyline points="7 10 12 15 17 10" />
                        <line x1="12" y1="15" x2="12" y2="3" />
                    </svg>
                    Download Excel Template
                </a>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn btn-ghost" onclick="closeModal()">Cancel</button>
                <button type="submit" class="btn btn-primary" id="uploadBtn" disabled>
                    <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4" />
                        <polyline points="17 8 12 3 7 8" />
                        <line x1="12" y1="3" x2="12" y2="15" />
                    </svg>
                    Import Employees
                </button>
            </div>
        </form>
    </div>
</div>


