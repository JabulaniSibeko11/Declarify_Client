@model Declarify.Models.ViewModels.DashboardViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Declarify</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/admindash.css" rel="stylesheet" />
    <link href="~/css/admindashboardcss1.css" rel="stylesheet" />
    @* <link href="~/css/upload.css" rel="stylesheet" /> *@
</head>

<body>
    <!-- Advanced Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="loader-spinner">
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
        </div>
        <p class="loader-text">Loading Dashboard...</p>
        <p class="loader-subtext">Initializing compliance analytics</p>
    </div>

    <!-- Premium Header with Company Name -->
    <header class="modern-header">
        <div class="header-container">
            <!-- Left Section: Branding & Company -->
            <div class="header-left">
                <div class="brand-section">
                    <div class="brand-logo">
                        <div class="logo-circle">
                            <img src="~/images/declarify logo.png" alt="Declarify Logo" class="logo-img" />
                        </div>
                        <div class="brand-text">
                            <div class="brand-name">Declarify</div>
                            <div class="brand-tagline">Compliance Hub</div>
                        </div>
                    </div>

                    <div class="vertical-divider"></div>

                    <div class="company-badge">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                            <polyline points="9 22 9 12 15 12 15 22" />
                        </svg>
                        <span>@(Model.CompanyName ?? "CPT")</span>
                    </div>
                </div>
            </div>

            <!-- Center Section: Breadcrumb -->
            <div class="header-center">
                <div class="dashboard-breadcrumb">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <rect x="3" y="3" width="7" height="7" />
                        <rect x="14" y="3" width="7" height="7" />
                        <rect x="14" y="14" width="7" height="7" />
                        <rect x="3" y="14" width="7" height="7" />
                    </svg>
                    <span>Admin Dashboard</span>
                </div>
            </div>

            <!-- Right Section: Profile Dropdown -->
            <div class="header-right">
                <button class="employee-trigger" id="adminDropdownTrigger">
                    <div class="employee-avatar">@(Model.AdminName?.Substring(0, Math.Min(2, Model.AdminName.Length)).ToUpper() ?? "AM")</div>
                    <div class="employee-info-compact">
                        <div class="employee-name">@(Model.AdminName ?? "Alice Morgan")</div>
                        <div class="employee-role">
                            <span class="role-badge">ADMIN</span>
                        </div>
                    </div>
                    <svg class="dropdown-arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <polyline points="6 9 12 15 18 9" />
                    </svg>
                </button>

                <!-- Dropdown Menu -->
                <div class="admin-dropdown" id="adminDropdown">
                    <div class="dropdown-header">
                        <div class="dropdown-avatar">@(Model.AdminName?.Substring(0, Math.Min(2, Model.AdminName.Length)).ToUpper() ?? "AM")</div>
                        <div>
                            <h4>@(Model.AdminName ?? "Alice Morgan")</h4>
                            <p>@(Model.AdminEmail ?? "admin@example.com")</p>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <div class="dropdown-section-label">Switch View</div>
                        <a href="@Url.Action("Index", "Home")" class="dropdown-item active">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                            <span>Admin Dashboard</span>
                        </a>
                        <a href="@Url.Action("Dashboard", "Employee")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span>My Tasks</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="@Url.Action("Profile", "Employee")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span>My Profile</span>
                        </a>
                        <a href="@Url.Action("Employees", "Home")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            <span>Manage Employees</span>
                        </a>
                        <a href="@Url.Action("Templates", "Home")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <span>Manage Templates</span>
                        </a>
                        <a href="@Url.Action("Credits", "Home")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                            <span>Purchase Credits</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="@Url.Action("UserRoleManagement", "Home")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span>Settings</span>
                        </a>
                        <a href="#help" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>Help & Support</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="@Url.Action("Logout", "Home")" class="dropdown-item logout">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Spectacular Hero Banner -->
        <div class="hero-banner">
            <div class="hero-content">
                <h1>Welcome back, <span>Admin</span></h1>
                <p>Public Sector Integrity. Clarified. Monitor compliance, track submissions, and drive accountability across your organization with powerful analytics and real-time insights.</p>
                <div class="hero-actions">
                    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("BulkRequest", "Home")'">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Create Bulk Request
                    </button>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Employees", "Home")'">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        Manage Employees
                    </button>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Templates", "Home")'">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Manage Templates
                    </button>
                    <button class="btn btn-ghost">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        View Reports
                    </button>
                </div>
            </div>
        </div>

        <!-- Alerts -->
        @if (Model.CriticalCreditWarning)
        {
            <div class="alert alert-danger">
                <div class="alert-icon">🚨</div>
                <div class="alert-content">
                    <h3>Critical: Credit Balance Low</h3>
                    <p>You have <strong>@Model.CreditBalance credits</strong> remaining. Purchase credits immediately to avoid service interruption.</p>
                </div>
            </div>
        }
        else if (Model.LowCreditWarning)
        {
            <div class="alert alert-warning">
                <div class="alert-icon">⚠️</div>
                <div class="alert-content">
                    <h3>Low Credit Balance</h3>
                    <p>You have <strong>@Model.CreditBalance credits</strong> remaining. Consider purchasing more credits soon.</p>
                </div>
            </div>
        }

        @if (Model.DaysUntilLicenseExpiry <= 30)
        {
            <div class="alert alert-@(Model.DaysUntilLicenseExpiry <= 7 ? "danger" : "warning")">
                <div class="alert-icon">🔔</div>
                <div class="alert-content">
                    <h3>License @(Model.DaysUntilLicenseExpiry <= 7 ? "Expiring Very Soon" : "Expiring Soon")</h3>
                    <p>Your annual license expires in <strong>@Model.DaysUntilLicenseExpiry days</strong>. Renew now to maintain access.</p>
                </div>
            </div>
        }

        <!-- Enhanced Stats Grid -->
        <div class="stats-grid">
            <!-- Compliance Rate -->
            <div class="stat-card @(Model.CompliancePercentage >= Model.GoalComplianceRate ? "success" : "warning")">
                <div class="stat-header"><div class="stat-icon">✓</div></div>
                <div class="stat-label">Compliance Rate</div>
                <div class="stat-value">@Model.CompliancePercentage.ToString("F1")%</div>
                <div class="stat-progress">
                    <div class="stat-progress-bar" style="width: @Model.CompliancePercentage%"></div>
                </div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    Goal: @Model.GoalComplianceRate% |
                    @if (Model.IsGoalAchieved)
                    {
                        <span class="status-badge success">🎉 Goal Achieved!</span>
                    }
                    else
                    {
                        <span class="status-badge warning">@((Model.GoalComplianceRate - Model.CompliancePercentage).ToString("F1"))% to go</span>
                    }
                </p>
            </div>

            <!-- Total Employees -->
            <div class="stat-card">
                <div class="stat-header"><div class="stat-icon">👥</div></div>
                <div class="stat-label">Total Employees</div>
                <div class="stat-value">@Model.TotalEmployees.ToString("N0")</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    <span class="status-badge success">@Model.SubmittedCount Submitted</span>
                </p>
            </div>

            <!-- Total Tasks -->
            <div class="stat-card">
                <div class="stat-header"><div class="stat-icon">📌</div></div>
                <div class="stat-label">Total Tasks</div>
                <div class="stat-value">@Model.TotalTasks.ToString("N0")</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    <span class="status-badge">@Model.OutstandingCount Outstanding</span>
                </p>
            </div>

            <!-- Awaiting Review -->
            <div class="stat-card @(Model.AwaitingReviewCount > 0 ? "warning" : "success")">
                <div class="stat-header"><div class="stat-icon">🕒</div></div>
                <div class="stat-label">Awaiting Review</div>
                <div class="stat-value">@Model.AwaitingReviewCount</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    <span>@(Model.AwaitingReviewCount > 0 ? "Managers need to review" : "All caught up")</span>
                </p>
            </div>

            <!-- Overdue -->
            <div class="stat-card @(Model.OverdueCount > 0 ? "danger" : "success")">
                <div class="stat-header"><div class="stat-icon">@(Model.OverdueCount > 0 ? "⚠" : "✓")</div></div>
                <div class="stat-label">Overdue</div>
                <div class="stat-value">@Model.OverdueCount</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    @if (Model.OverdueCount > 0)
                    {
                        <span>⚡ Requires immediate action</span>
                    }
                    else
                    {

                        <span class="status-badge success">All on track!</span>
                    }
                </p>
            </div>

            <!-- Amendments Required -->
            <div class="stat-card @(Model.AmendmentRequiredCount > 0 ? "warning" : "success")">
                <div class="stat-header"><div class="stat-icon">📝</div></div>
                <div class="stat-label">Amendments Required</div>
                <div class="stat-value">@Model.AmendmentRequiredCount</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    <span>@(Model.AmendmentRequiredCount > 0 ? "Employee resubmission pending" : "None pending")</span>
                </p>
            </div>

            <!-- Pending Verification -->
            <div class="stat-card @(Model.PendingVerificationCount > 0 ? "warning" : "success")">
                <div class="stat-header"><div class="stat-icon">🔍</div></div>
                <div class="stat-label">Pending Verification</div>
                <div class="stat-value">@Model.PendingVerificationCount</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    <span>@(Model.PendingVerificationCount > 0 ? "Admin action required" : "No verifications pending")</span>
                </p>
            </div>

            <!-- Credits (keep, but not core FR 4.3.1) -->
            <div class="stat-card">
                <div class="stat-header"><div class="stat-icon">💳</div></div>
                <div class="stat-label">Credit Balance</div>
                <div class="stat-value">@Model.CreditBalance.ToString("N0")</div>
                <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.75rem; font-weight: 600;">
                    @if (Model.ExpiringCredits.Any())
                    {
                        <span class="status-badge warning">@Model.ExpiringCredits.Count() expiring soon</span>
                    }
                    else
                    {
                        <span class="status-badge success">✓ Healthy</span>
                    }
                </p>
            </div>
        </div>

        <!-- Spectacular Quick Actions -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">Quick Actions</h2>
            </div>
            <div class="quick-actions">
                <div class="action-card" onclick="window.location.href='@Url.Action("CreateTemplate", "Home")'">
                    <div class="action-card-icon">📝</div>
                    <h3>Create Template</h3>
                    <p>Design custom DOI forms with flexible sections and verification rules</p>
                </div>
                <div class="action-card" onclick="openModal()">
                    <div class="action-card-icon">📤</div>
                    <h3>Import Employees</h3>
                    <p>Bulk upload employee data via CSV spreadsheet with validation</p>
                </div>
                <div class="action-card" onclick="window.location.href='@Url.Action("Index", "Verification")'">
                    <div class="action-card-icon">🔍</div>
                    <h3>Run Verification</h3>
                    <p>Execute CIPC & credit checks on submitted declarations</p>
                </div>
                <div class="action-card" onclick="window.location.href='@Url.Action("Credits", "Home")'">
                    <div class="action-card-icon">💎</div>
                    <h3>Purchase Credits</h3>
                    <p>Add verification and submission credits</p>
                </div>
            </div>
        </div>

        <!-- Department Breakdown -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">Department Compliance Breakdown</h2>
                <button class="btn btn-ghost">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    Export Report
                </button>
            </div>
            <div class="department-list">
                @foreach (var dept in Model.DepartmentBreakdown.Values.OrderBy(d => d.Department))
                {
                    var complianceRate = dept.CompliancePercentage;
                    var statusClass = complianceRate >= 95 ? "success" : complianceRate >= 85 ? "warning" : "danger";

                    <div class="department-item">
                        <div class="department-header">
                            <span class="department-name">@dept.Department</span>
                            <span class="status-badge @statusClass">@complianceRate.ToString("F1")% Compliant</span>
                        </div>
                        <div class="department-stats">
                            <div class="department-stat">
                                <span style="color: var(--color-success);">●</span>
                                <span>@dept.SubmittedCount Submitted</span>
                            </div>
                            <div class="department-stat">
                                <span style="color: var(--color-warning);">●</span>
                                <span>@dept.OutstandingCount Outstanding</span>
                            </div>
                            <div class="department-stat">
                                <span style="color: var(--color-danger);">●</span>
                                <span>@dept.OverdueCount Overdue</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>

    @Html.Partial("_UploadEmployees")
    @Html.Partial("_TemplateBuilder")
    @Html.Partial("_SettingModal")

    <script src="~/js/uploademployeesjs.js"></script>
    <script src="~/js/settingsjs.js"></script>
    <script>
        // Advanced Page Loader
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('pageLoader').classList.add('hidden');
            }, 900);
        });

        // Dropdown Toggle
        const adminDropdownTrigger = document.getElementById('adminDropdownTrigger');
        const adminDropdown = document.getElementById('adminDropdown');

        adminDropdownTrigger.addEventListener('click', function(e) {
            e.stopPropagation();
            adminDropdown.classList.toggle('active');
        });

        document.addEventListener('click', function(e) {
            if (!adminDropdownTrigger.contains(e.target) && !adminDropdown.contains(e.target)) {
                adminDropdown.classList.remove('active');
            }
        });

        // Animate progress bars with advanced easing
        window.addEventListener('load', () => {
            const progressBars = document.querySelectorAll('.stat-progress-bar');
            progressBars.forEach((bar, index) => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100 + (index * 100));
            });
        });
    </script>
</body>
</html>
