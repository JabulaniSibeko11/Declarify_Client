                function generateCompleteFormAdvancedTableHTML(field) {
            const cells = field.cells || field.Cells || [];
            const visibleCells = cells.filter(c => !c.Hidden && !c.hidden);
            const totalRows = field.rows || field.Rows || 4;
            const totalCols = field.gridColumns || field.GridColumns || 3;
            const assignedColumns = field.columns || field.Columns || [];

            // Group cells by type
            const headerCells = visibleCells.filter(c => c.IsHeader || c.isHeader);
            const dataCells = visibleCells.filter(c => !(c.IsHeader || c.isHeader) && (c.Row || c.row) === 2);
            const footerCells = visibleCells.filter(c => !(c.IsHeader || c.isHeader) && (c.Row || c.row) >= 3);

            // Group by row
            const headerRows = {};
            headerCells.forEach(cell => {
                const row = cell.Row || cell.row;
                if (!headerRows[row]) headerRows[row] = [];
                headerRows[row].push(cell);
            });

            const footerRows = {};
            footerCells.forEach(cell => {
                const row = cell.Row || cell.row;
                if (!footerRows[row]) footerRows[row] = [];
                footerRows[row].push(cell);
            });

            let html = `
                <label class="form-label ${field.required ? 'required' : ''}">${escapeHTML(field.fieldLabel)}</label>
                ${field.helpText ? `<small style="display: block; margin-bottom: 8px; color: #6b7280;">${escapeHTML(field.helpText)}</small>` : ''}
                <div class="advanced-table-field">
                    <div class="advanced-table-container">
                        <table>
            `;

            // Render header rows
            Object.keys(headerRows).sort((a, b) => Number(a) - Number(b)).forEach(rowNum => {
                html += '<tr>';
                headerRows[rowNum].sort((a, b) => (a.Col || a.col) - (b.Col || b.col)).forEach(cell => {
                    const colspan = cell.Colspan || cell.colspan || 1;
                    const rowspan = cell.Rowspan || cell.rowspan || 1;
                    const columnName = cell.ColumnName || cell.columnName || '';
                    html += `<th class="header-cell" rowspan="${rowspan}" colspan="${colspan}">${escapeHTML(columnName)}</th>`;
                });
                html += '</tr>';
            });

            // Render data entry row (1 sample)
            if (dataCells.length > 0) {
                html += '<tbody><tr class="advanced-table-data-row">';
                for (let col = 0; col < totalCols; col++) {
                    const cell = dataCells.find(c => (c.Col || c.col) === col);
                    if (cell) {
                        const columnName = cell.ColumnName || cell.columnName;
                        const column = assignedColumns.find(c => (c.Name || c.name) === columnName);
                        const inputType = (column?.Type || column?.type || 'text').toLowerCase();
                        html += `<td class="assigned-cell"><input type="${inputType}" disabled /></td>`;
                    }
