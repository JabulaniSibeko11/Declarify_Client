    @Html.Partial("_TemplateBuilder")

    @* <script src="~/js/templatebuilderjs.js"></script> *@
    <script src="~/js/templatebuilder.js"></script> 
    <script>
        // Initialize template data from model
        const templateId = @Model.TemplateId;
        const templateConfig = @Html.Raw(Model.Config);
        let currentView = 'preview';

        // Load existing template structure
        window.addEventListener('load', () => {
            loadExistingTemplate(templateConfig);
        });

        // ============================================================================
        // VIEW SWITCHING
        // ============================================================================

        function switchView(view) {
            currentView = view;

            const previewView = document.getElementById('previewView');
            const editView = document.getElementById('editView');
            const previewBtn = document.querySelector('[data-view="preview"]');
            const editBtn = document.querySelector('[data-view="edit"]');

            if (view === 'preview') {
                previewView.classList.add('active');
                editView.classList.remove('active');
                previewBtn.classList.add('active');
                editBtn.classList.remove('active');

                // Regenerate preview
                generateEditModePreview();
            } else {
                editView.classList.add('active');
                previewView.classList.remove('active');
                editBtn.classList.add('active');
                previewBtn.classList.remove('active');
            }
        }

        // ============================================================================
        // LOAD EXISTING TEMPLATE
        // ============================================================================

        function loadExistingTemplate(config) {
            try {
                const data = typeof config === 'string' ? JSON.parse(config) : config;

                if (data.sections && Array.isArray(data.sections)) {
                    sections = data.sections;
                    sectionIdCounter = sections.length;

                    // Update max field counter
                    sections.forEach(section => {
                        if (section.fields) {
                            section.fields.forEach(field => {
                                const fieldNum = parseInt(field.fieldId.replace('field_', ''));
                                if (fieldNum >= fieldIdCounter) {
                                    fieldIdCounter = fieldNum + 1;
                                }
                            });
                        }
                    });

                    // Render edit view
                    const container = document.getElementById('sectionsContainer');
                    container.innerHTML = '';

                    sections.forEach(section => {
                        renderExistingSection(section);
                    });

                    updateAddSectionButton();

                    // Generate preview
                    generateEditModePreview();

                } else {
                    // No sections yet
                    document.getElementById('sectionsContainer').innerHTML = `
                        <div class="empty-state">
                            <div class="empty-icon">📋</div>
                            <h3>No Sections Yet</h3>
                            <p>Click "Add Section" to start building your template</p>
                        </div>
                    `;

                    document.getElementById('previewSectionsContainer').innerHTML = `
                        <div class="empty-state">
                            <div class="empty-icon">📋</div>
                            <h3>No Sections Yet</h3>
                            <p>Switch to Edit Mode to add sections to your template</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading template:', error);
                alert('Error loading template configuration. Please refresh the page.');
            }
        }

        // ============================================================================
        // RENDER EXISTING SECTION
        // ============================================================================

        function renderExistingSection(section) {
            const container = document.getElementById('sectionsContainer');
            const sectionHtml = `
                <div class="section-card-builder" data-section-id="${section.sectionId}">
                    <div class="section-header-builder">
                        <div class="drag-handle" title="Drag to reorder">⋮⋮</div>
                        <input type="text" class="section-title-input"
                               placeholder="Section Title"
                               onchange="updateSectionTitleAndRefresh('${section.sectionId}', this.value)"
                               value="${escapeHTML(section.sectionTitle || '')}">
                        <button class="btn-icon-delete" onclick="deleteSectionAndRefresh('${section.sectionId}')" title="Delete Section">
                            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                        </button>
                    </div>

                    <div class="section-disclaimer">
                        <input type="text" class="disclaimer-input"
                               placeholder="Optional: Instructions or disclaimer..."
                               onchange="updateSectionDisclaimerAndRefresh('${section.sectionId}', this.value)"
                               value="${escapeHTML(section.disclaimer || '')}">
                    </div>

                    <div class="fields-container-builder" id="fields-${section.sectionId}">
                        ${section.fields && section.fields.length > 0 ? '' : `
                            <div class="empty-fields">
                                <p class="clickable-add-field" onclick="showAddFieldModal('${section.sectionId}')">
                                    <svg width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M12 4v16m8-8H4" />
                                    </svg>
                                    No fields yet. Click here to add a field
                                </p>
                            </div>
                        `}
                    </div>

                    <div class="section-actions">
                        <button class="btn btn-ghost btn-sm" style="background-color:#00C2CB; color:#081B38;" onclick="showAddFieldModal('${section.sectionId}')">
                            <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M12 4v16m8-8H4" />
                            </svg>
                            Add Field
                        </button>
                        <span class="field-count" id="fieldCount-${section.sectionId}">${section.fields ? section.fields.length : 0} field(s)</span>
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', sectionHtml);

            // Render existing fields
            if (section.fields && section.fields.length > 0) {
                section.fields.forEach(field => {
                    renderFieldInSection(section.sectionId, field);
                });
            }
        }

        // ============================================================================
        // GENERATE PREVIEW
        // ============================================================================

             function generateEditModePreview() {
            const container = document.getElementById('previewSectionsContainer');
            if (!container) return;

            container.innerHTML = '';

            if (sections.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">📋</div>
                        <h3>No Sections Yet</h3>
                        <p>Switch to Edit Mode to add sections to your template</p>
                    </div>
                `;
                return;
            }

            // Loop through sections from database (loaded in sections array)
            sections.forEach((section, index) => {
                const sectionIndex = index + 1;

                let sectionHtml = `
                    <div class="form-card" data-section="${sectionIndex}" data-section-id="${section.sectionId}">
                        <div class="section-header">
                            <span class="section-number">${sectionIndex}</span>
                            <span>${escapeHTML(section.sectionTitle || 'Untitled Section')}</span>
                            <button type="button" class="quick-edit-btn" onclick="quickEditSection('${section.sectionId}')" title="Edit this section">
                                <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </button>
                        </div>
                `;

                // Add disclaimer if exists
                if (section.disclaimer) {
                    sectionHtml += `<p class="section-description">${escapeHTML(section.disclaimer)}</p>`;
                }

                // Check if section has fields
                if (!section.fields || section.fields.length === 0) {
                    sectionHtml += `
                        <div class="empty-fields-preview">
                            <p>No fields in this section yet</p>
                            <button type="button" class="btn-sm btn-ghost" onclick="quickEditSection('${section.sectionId}')">Add Fields</button>
                        </div>
                    `;
                } else {
                    // Loop through fields and render them
                    const orderedFields = section.fields.sort((a, b) => (a.order || 0) - (b.order || 0));

                    orderedFields.forEach(field => {
                        sectionHtml += `<div class="form-group" data-field-id="${field.fieldId}">`;
                        sectionHtml += generateCompleteFormFieldHTML(field);
                        sectionHtml += '</div>';
                    });
                }

                sectionHtml += '</div>';
                container.insertAdjacentHTML('beforeend', sectionHtml);
            });
        }

                function generateCompleteFormFieldHTML(field) {
            const fieldType = (field.fieldType || '').toLowerCase();
            let html = '';

            switch (fieldType) {
                case "heading":
                    html = `<h3 class="field-heading">${escapeHTML(field.fieldLabel)}</h3>`;
                    break;

                case "paragraph":
                    html = `<p class="field-paragraph">${escapeHTML(field.helpText || field.fieldLabel)}</p>`;
                    break;

                case "divider":
                    html = `<hr class="field-divider" />`;
                    break;

                case "text":
                case "email":
                case "number":
                case "phone":
                case "url":
                    html = `
                        <label class="form-label ${field.required ? 'required' : ''}">${escapeHTML(field.fieldLabel)}</label>
                        ${field.helpText ? `<small style="display: block; margin-bottom: 8px; color: #6b7280;">${escapeHTML(field.helpText)}</small>` : ''}
                        <input type="${fieldType}" class="form-input" disabled placeholder="${escapeHTML(field.placeholder || 'Enter ' + field.fieldLabel.toLowerCase())}" />
                    `;
                    break;

                case "currency":
                    html = `
                        <label class="form-label ${field.required ? 'required' : ''}">${escapeHTML(field.fieldLabel)}</label>
                        <div style="position: relative;">
                            <span style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #6b7280;">R</span>
                            <input type="number" class="form-input" disabled placeholder="0.00" step="0.01" style="padding-left: 32px;" />
                        </div>
                    `;
                    break;

                case "date":
                    html = `
                        <label class="form-label ${field.required ? 'required' : ''}">${escapeHTML(field.fieldLabel)}</label>
                        <input type="date" class="form-input" disabled />
                    `;
                    break;

                case "textarea":
                    html = `
                        <label class="form-label ${field.required ? 'required' : ''}">${escapeHTML(field.fieldLabel)}</label>
                        <textarea class="form-textarea" disabled placeholder="${escapeHTML(field.placeholder || '')}"></textarea>
                    `;
                    break;

                case "select":
                case "dropdown":
                    html = `
                        <label class="form-label ${field.required ? 'required' : ''}">${escapeHTML(field.fieldLabel)}</label>
                        <select class="form-select" disabled>
                            <option value="">Select...</option>
                            ${(field.options || []).map(opt => `<option>${escapeHTML(opt)}</option>`).join('')}
                        </select>
                    `;
                    break;

                case "checkbox":
                    html = `
                        <div class="checkbox-group">
                            <div class="checkbox-item">
                                <input type="checkbox" disabled />
                                <label>${escapeHTML(field.fieldLabel)}</label>
                            </div>
                        </div>
                    `;
                    break;

                case "boolean":
                    html = `
