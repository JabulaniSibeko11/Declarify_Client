@{
}


<h2>Central Hub Ping Test</h2>

@if (ViewBag.Status == "Success")
{
    <div style="color: green; font-weight: bold;">
        Connected successfully!
    </div>
    <pre>@System.Text.Json.JsonSerializer.Serialize(ViewBag.PingResult, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
}
else
{
    <div style="color: red; font-weight: bold;">
        Connection failed: @ViewBag.Error
    </div>
}