@model Declarify.Models.ViewModels.EmployeeDashboardViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Dashboard - Declarify</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="~/css/empdashb1.css" rel="stylesheet" />
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="loader-spinner">
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
            <div class="loader-ring"></div>
        </div>
        <p class="loader-text">Loading Dashboard...</p>
        <p class="loader-subtext">Preparing your compliance overview</p>
    </div>

    <!-- Header (Unified with Admin) -->
    <header class="modern-header">0
        <div class="header-container">
            <!-- Left Section: Branding -->
            <div class="header-left">
                <div class="brand-section">
                    <div class="brand-logo">
                        <div class="logo-circle">
                            <img src="~/images/declarify logo.png" alt="Declarify Logo" class="logo-img" />
                        </div>
                        <div class="brand-text">
                            <div class="brand-name">Declar</div>
                            <div class="brand-tagline">Compliance Hub</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Center Section: Breadcrumb -->
            <div class="header-center">
                <div class="dashboard-breadcrumb">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <rect x="3" y="3" width="7" height="7" />
                        <rect x="14" y="3" width="7" height="7" />
                        <rect x="14" y="14" width="7" height="7" />
                        <rect x="3" y="14" width="7" height="7" />
                    </svg>
                    <span>My Dashboard</span>
                </div>
            </div>

            <!-- Right Section: Profile Dropdown -->
            <div class="header-right">
                <button class="employee-trigger" id="adminDropdownTrigger">
                    <div class="employee-avatar">@Model.Employee.FullName.Substring(0, 1).ToUpper()</div>
                    <div class="employee-info-compact">
                        <div class="employee-name">@Model.Employee.FullName</div>
                        <div class="employee-role">
                            <span class="role-badge">Employee</span>
                        </div>
                    </div>
                    <svg class="dropdown-arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <polyline points="6 9 12 15 18 9" />
                    </svg>
                </button>

                <!-- Dropdown Menu -->
                <div class="admin-dropdown" id="adminDropdown">
                    <div class="dropdown-header">
                        <div class="dropdown-avatar">@Model.Employee.FullName.Substring(0, 1).ToUpper()</div>
                        <div>
                            <h4>@Model.Employee.FullName</h4>
                            <p>@Model.Employee.Email</p>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    @if (Model.Employee.IsExecutive || Model.Employee.IsSeniorManagement)
                    {
                        <div class="dropdown-section">
                            <div class="dropdown-section-label">Switch View</div>
                            <a href="@Url.Action("ExecutiveDashboard", "Executive")" class="dropdown-item">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                </svg>
                                <span>Executive Dashboard</span>
                                <span class="dropdown-badge">Analytics</span>
                            </a>
                            <a href="@Url.Action("Dashboard", "Employee")" class="dropdown-item active">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span>My Dashboard</span>
                            </a>
                        </div>
                        <div class="dropdown-divider"></div>
                    }

                    @if (Model.Employee.Position == "Admin")
                    {
                        <a href="@Url.Action("Index", "Home")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            </svg>
                            <span>Admin Dashboard</span>
                        </a>
                    }

                    <div class="dropdown-section">
                        <a href="@Url.Action("Profile", "Employee")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span>My Profile</span>
                        </a>

                        @if (Model.IsLineManager)
                        {
                            <a href="#team-approvals" class="dropdown-item" onclick="switchTab('team-approvals'); closeDropdown(); return false;">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                <span>Team Approvals</span>
                                @{
                                    var pendingCount = Model.Subordinates.SelectMany(s => s.Tasks).Count(t => t.Status == "Submitted");
                                }
                                @if (pendingCount > 0)
                                {
                                    <span class="dropdown-badge warning">@pendingCount</span>
                                }
                            </a>
                        }

                        <a href="@Url.Action("SubmissionHistory", "Employee")" class="dropdown-item">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>My Submission History</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="#help" class="dropdown-item" onclick="switchTab('help'); closeDropdown(); return false;">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>Help & Resources</span>
                        </a>
                    </div>

                    <div class="dropdown-divider"></div>

                    <div class="dropdown-section">
                        <a href="@Url.Action("Logout", "Home")" class="dropdown-item logout">
                            <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Banner -->
    <div class="hero-banner">
        <div class="hero-content">
            <div class="hero-welcome">
                <h1>Welcome back, <span class="accent">@Model.Employee.FullName.Split(' ')[0]</span>! 👋</h1>
                <p class="hero-subtitle">Your compliance journey at a glance</p>
                <div class="hero-meta">
                    <div class="meta-badge">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <span>@Model.Employee.Position</span>
                    </div>
                    <div class="meta-badge">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <span>@Model.Employee.Department</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card success">
            <div class="stat-icon">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="stat-label">Compliance Rate</div>
            <div class="stat-value">@Model.Stats.ComplianceRate.ToString("F0")%</div>
            <div class="stat-trend positive">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                On target for 95% goal
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                </svg>
            </div>
            <div class="stat-label">Total Submissions</div>
            <div class="stat-value">@Model.Stats.CompletedTasks</div>
            <div class="stat-trend">of @Model.Stats.TotalTasks declarations</div>
        </div>

        @if (Model.Stats.OutstandingTasks > 0)
        {
            <div class="stat-card warning">
                <div class="stat-icon">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="stat-label">Action Required</div>
                <div class="stat-value">@Model.Stats.OutstandingTasks</div>
                <div class="stat-trend">@(Model.Stats.OutstandingTasks == 1 ? "declaration" : "declarations") pending</div>
            </div>
        }

        <div class="stat-card @(Model.Stats.CurrentStreak >= 3 ? "success" : "")">
            <div class="stat-icon">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" />
                </svg>
            </div>
            <div class="stat-label">Current Streak</div>
            <div class="stat-value">@Model.Stats.CurrentStreak</div>
            <div class="stat-trend @(Model.Stats.CurrentStreak >= 3 ? "positive" : "")">
                @(Model.Stats.CurrentStreak >= 3 ? "🔥 Great compliance!" : "Keep it going!")
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="dashboard-container">
        <div class="tabs-container">
            <div class="tabs-header">
                <button class="tab-button active" data-tab="active-tasks">
                    <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                    </svg>
                    Active Tasks
                    @if (Model.Stats.OutstandingTasks > 0)
                    {
                        <span class="status-badge outstanding" style="margin-left: auto;">@Model.Stats.OutstandingTasks</span>
                    }
                </button>

                <button class="tab-button" data-tab="history">
                    <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Submission History
                </button>

                <button class="tab-button" data-tab="help">
                    <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
                    </svg>
                    Help & Resources
                </button>

                @if (Model.IsLineManager)
                {
                    <button class="tab-button" data-tab="team-approvals">
                        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                        </svg>
                        Team Approvals
                        @{
                            var pendingApprovals = Model.Subordinates.SelectMany(s => s.Tasks).Count(t => t.Status == "Submitted");
                        }
                        @if (pendingApprovals > 0)
                        {
                            <span class="status-badge outstanding" style="margin-left: auto;">@pendingApprovals</span>
                        }
                    </button>
                }
            </div>

            <!-- Active Tasks Tab -->
            <div class="tab-content active" id="active-tasks">
                @if (Model.HasPendingTasks)
                {
                    <div class="tasks-list">
                        @foreach (var task in Model.Tasks.Where(t => t.Status == "Outstanding"))
                        {
                            var isOverdue = task.DueDate < DateTime.UtcNow;
                            var daysUntilDue = (task.DueDate - DateTime.UtcNow).Days;

                            <div class="task-card @(isOverdue ? "overdue" : "")">
                                <div class="task-status-indicator @(isOverdue ? "overdue" : "pending")">
                                    @if (isOverdue)
                                    {
                                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    }
                                </div>

                                <div class="task-details">
                                    <div class="task-header">
                                        <div>
                                            <h3 class="task-title">@task.Template.TemplateName</h3>
                                            <div class="task-meta">
                                                <div class="meta-item">
                                                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                                                    </svg>
                                                    <span>Due: @task.DueDate.ToString("MMM dd, yyyy")</span>
                                                </div>
                                                @if (!isOverdue && daysUntilDue <= 7)
                                                {
                                                    <div class="meta-item" style="color: #F59E0B;">
                                                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                        </svg>
                                                        <span>@daysUntilDue days remaining</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <span class="status-badge @(isOverdue ? "overdue" : "outstanding")">
                                            <span class="status-dot"></span>
                                            @(isOverdue ? "Overdue" : "Pending")
                                        </span>
                                    </div>

                                    <p class="task-description">
                                        Complete your annual Declaration of Interest as required by organizational policy.
                                        This helps maintain transparency and compliance standards.
                                    </p>

                                    <div class="task-actions">
                                        <a href="@Url.Action("Task", "Employee", new { token = task.AccessToken })" class="btn btn-primary">
                                            <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                            </svg>
                                            Complete Declaration
                                        </a>

                                        @if (task.Status == "Draft")
                                        {
                                            <button class="btn btn-ghost">
                                                <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                                                </svg>
                                                Continue Draft
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <svg class="empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <h3 class="empty-title">All caught up! 🎉</h3>
                        <p class="empty-message">
                            You don't have any pending declarations at the moment.
                            Great job staying on top of your compliance requirements!
                        </p>
                    </div>
                }
            </div>

            <!-- History Tab -->
            <div class="tab-content" id="history">
                <div class="compliance-timeline">
                    @foreach (var task in Model.Tasks.Where(t => t.Status == "Submitted" || t.Status == "Reviewed").OrderByDescending(t => t.DueDate))
                    {
                        <div class="timeline-item @(task.Status == "Reviewed" ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="timeline-date">@task.DueDate.ToString("MMMM dd, yyyy")</div>
                                <div class="timeline-title">@task.Template.TemplateName</div>
                                <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 12px; gap: 10px;">
                                    <span class="status-badge @(task.Status == "Reviewed" ? "success" : "outstanding")">
                                        @task.Status
                                    </span>

                                    <div style="display:flex; gap:10px; align-items:center;">
                                        <!-- ✅ Download PDF (only after submitted/reviewed) -->
                                        <a class="btn btn-primary" style="padding: 8px 16px; font-size: 0.85rem;"
                                           href="@Url.Action("DownloadDoiPdf", "Employee", new { token = task.AccessToken })">
                                            ⬇ Download PDF
                                        </a>

                                        <!-- Existing action -->
                                        <button class="btn btn-ghost" style="padding: 8px 16px; font-size: 0.85rem;">
                                            View Details
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }

                    @if (!Model.Tasks.Any(t => t.Status == "Submitted" || t.Status == "Reviewed"))
                    {
                        <div class="empty-state">
                            <svg class="empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <h3 class="empty-title">No submission history yet</h3>
                            <p class="empty-message">
                                Your completed declarations will appear here once you submit them.
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Help Tab -->
            <div class="tab-content" id="help">
                <div style="max-width: 800px;">
                    <h2 style="margin-bottom: 24px; font-size: 1.75rem; font-family: 'Montserrat', sans-serif; font-weight: 600; color: var(--color-primary);">Help & Resources</h2>

                    <div class="task-card" style="margin-bottom: 20px;">
                        <div class="task-status-indicator" style="background: var(--gradient-accent);">
                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
                            </svg>
                        </div>
                        <div class="task-details">
                            <h3 class="task-title">What is a Declaration of Interest?</h3>
                            <p class="task-description">
                                A Declaration of Interest (DOI) is a formal disclosure of any financial interests,
                                business relationships, or other circumstances that could potentially influence your
                                decision-making in your official capacity. This helps maintain transparency and
                                prevents conflicts of interest.
                            </p>
                        </div>
                    </div>

                    <div class="task-card" style="margin-bottom: 20px;">
                        <div class="task-status-indicator" style="background: linear-gradient(135deg, #10B981 0%, #059669 100%);">
                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                            </svg>
                        </div>
                        <div class="task-details">
                            <h3 class="task-title">Why is this important?</h3>
                            <p class="task-description">
                                Regular declarations ensure organizational integrity and public trust. They help identify
                                and manage potential conflicts of interest before they become problematic. Compliance with
                                DOI requirements is a condition of employment and demonstrates your commitment to ethical
                                public service.
                            </p>
                        </div>
                    </div>

                    <div class="task-card">
                        <div class="task-status-indicator pending">
                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                            </svg>
                        </div>
                        <div class="task-details">
                            <h3 class="task-title">Need help?</h3>
                            <p class="task-description">
                                If you have questions about what to declare or how to complete the form,
                                please contact your compliance officer or HR department. You can also reach
                                out to your manager (@(Model.Employee.ManagerName ?? "your supervisor")) for guidance.
                            </p>
                            <div class="task-actions" style="margin-top: 16px;">
                                <a href="mailto:compliance@organization.gov" class="btn btn-primary">
                                    <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                                    </svg>
                                    Contact Compliance
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Team Approvals Tab (if line manager) -->
            @if (Model.IsLineManager)
            {
                <div class="tab-content" id="team-approvals">
                    @if (Model.Subordinates.Any())
                    {
                        <div style="overflow-x: auto;">
                            <table style="width: 100%; border-collapse: collapse;">
                                <thead>
                                    <tr style="border-bottom: 2px solid #E2E8F0;">
                                        <th style="padding: 1rem; text-align: left; font-weight: 600; color: var(--color-text-muted);">Employee</th>
                                        <th style="padding: 1rem; text-align: center; font-weight: 600; color: var(--color-text-muted);">Template</th>
                                        <th style="padding: 1rem; text-align: center; font-weight: 600; color: var(--color-text-muted);">Due Date</th>
                                        <th style="padding: 1rem; text-align: center; font-weight: 600; color: var(--color-text-muted);">Status</th>
                                        <th style="padding: 1rem; text-align: center; font-weight: 600; color: var(--color-text-muted);">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sub in Model.Subordinates)
                                    {
                                        @foreach (var task in sub.Tasks)
                                        {
                                            <tr style="border-bottom: 1px solid #E2E8F0;">
                                                <td style="padding: 1rem;">
                                                    <div style="display: flex; align-items: center; gap: 0.75rem;">
                                                        <div class="employee-avatar" style="width: 36px; height: 36px; font-size: 0.75rem;">
                                                            @sub.FullName.Substring(0, 1).ToUpper()
                                                        </div>
                                                        <div>
                                                            <div style="font-weight: 600; color: var(--color-text-main);">@sub.FullName</div>
                                                            <div style="font-size: 0.875rem; color: var(--color-text-muted);">@sub.Position • @sub.Department</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td style="padding: 1rem; text-align: center; font-weight: 500;">@task.TemplateName</td>
                                                <td style="padding: 1rem; text-align: center;">@task.DueDate.ToString("MMM dd, yyyy")</td>
                                                <td style="padding: 1rem; text-align: center;">
                                                    <span class="status-badge @(task.Status == "Reviewed" ? "success" : task.Status == "Submitted" ? "outstanding" : "warning")">
                                                        @task.Status
                                                    </span>
                                                </td>
                                                <td style="padding: 1rem; text-align: center;">
                                                    @if (task.Status == "Submitted")
                                                    {
                                                        <a href="@Url.Action("Review", "Employee", new { taskId = task.TaskId })" class="btn btn-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem;">
                                                            Review
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span style="color: var(--color-text-muted); font-size: 0.875rem;">—</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <h3 class="empty-title">No team members</h3>
                            <p class="empty-message">You don't have any team members requiring approval at this time.</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <script>
        // Page Loader
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('pageLoader').classList.add('hidden');
            }, 800);
        });

        // Dropdown Toggle
        const adminDropdownTrigger = document.getElementById('adminDropdownTrigger');
        const adminDropdown = document.getElementById('adminDropdown');

        adminDropdownTrigger.addEventListener('click', function(e) {
            e.stopPropagation();
            adminDropdown.classList.toggle('active');
        });

        document.addEventListener('click', function(e) {
            if (!adminDropdownTrigger.contains(e.target) && !adminDropdown.contains(e.target)) {
                adminDropdown.classList.remove('active');
            }
        });

        function closeDropdown() {
            adminDropdown.classList.remove('active');
        }

        // Tab Switching
        function switchTab(tabId) {
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

            const button = document.querySelector(`[data-tab="${tabId}"]`);
            if (button) button.classList.add('active');

            const content = document.getElementById(tabId);
            if (content) content.classList.add('active');
        }

        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                const tabId = button.getAttribute('data-tab');
                switchTab(tabId);
            });
        });
    </script>
</body>
</html>
