@model Declarify.Models.ViewModels.EmployeeDashboardViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Dashboard - Declarify</title>

    <link href="~/css/employeedashboardcss.css" rel="stylesheet" />
    <link href="~/css/empdashb.css" rel="stylesheet" />
</head>
<body>
    <div class="page-loader" id="pageLoader">
        <div class="spinner-container">
            <div class="spinner-ring"></div>
            <div class="spinner-ring"></div>
        </div>
        <p class="loader-text">Loading Dashboard...</p>
        <p class="loader-subtext">Preparing your compliance overview</p>
    </div>

    <div class="employee-dashboard">
        <div class="dashboard-container">

            <!-- Header Section -->
            <header class="dashboard-header animate-in">
                <div class="header-welcome">
                    <h1>Welcome back, @Model.Employee.FullName.Split(' ')[0]! 👋</h1>
                    <p class="header-subtitle">@Model.Employee.Position • @Model.Employee.Department</p>
                </div>

                <div class="header-profile-container">
                    <div class="header-profile" id="profileDropdownTrigger">
                        <div class="profile-avatar">
                            @Model.Employee.FullName.Substring(0, 1).ToUpper()
                        </div>
                        <div class="profile-info">
                            <h3>@Model.Employee.FullName</h3>
                            <p class="profile-role">@Model.Employee.Position</p>
                        </div>
                        <svg class="dropdown-arrow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </div>

                    <!-- Dropdown Menu -->
                    <div class="profile-dropdown" id="profileDropdown">
                        <div class="dropdown-header">
                            <div class="dropdown-avatar">
                                @Model.Employee.FullName.Substring(0, 1).ToUpper()
                            </div>
                            <div>
                                <h4>@Model.Employee.FullName</h4>
                                <p>@Model.Employee.Email</p>
                            </div>
                        </div>

                        <div class="dropdown-divider"></div>

                        <!-- Executive Role: Dashboard Switcher -->
                        @if (Model.Employee.IsExecutive || Model.Employee.IsSeniorManagement)
                        {
                            <div class="dropdown-section">
                                <div class="dropdown-section-label">Switch View</div>
                                <a href="@Url.Action("ExecutiveDashboard", "Executive")" class="dropdown-item">
                                    <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                    </svg>
                                    <span>Executive Dashboard</span>
                                    <span class="dropdown-badge">Analytics</span>
                                </a>
                                <a href="@Url.Action("Dashboard", "Employee")" class="dropdown-item active">
                                    <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                    <span>My Dashboard</span>
                                </a>
                            </div>
                            <div class="dropdown-divider"></div>
                        }

                        <!-- All Users -->
                        <div class="dropdown-section">
                            <a href="@Url.Action("Profile", "Employee")" class="dropdown-item">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span>My Profile</span>
                            </a>

                            @if (Model.IsLineManager)
                            {
                                <a href="#team-approvals" class="dropdown-item" onclick="switchTab('team-approvals'); closeDropdown(); return false;">
                                    <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                    </svg>
                                    <span>Team Approvals</span>
                                    @{
                                        var pendingCount = Model.Subordinates.SelectMany(s => s.Tasks).Count(t => t.Status == "Submitted");
                                    }
                                    @if (pendingCount > 0)
                                    {
                                        <span class="dropdown-badge warning">@pendingCount</span>
                                    }
                                </a>
                            }

                            <a href="@Url.Action("SubmissionHistory", "Employee")" class="dropdown-item">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span>My Submission History</span>
                            </a>
                        </div>

                        <div class="dropdown-divider"></div>

                        <!-- Settings & Help -->
                        <div class="dropdown-section">
                            <a href="#help" class="dropdown-item" onclick="switchTab('help'); closeDropdown(); return false;">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span>Help & Resources</span>
                            </a>
                        </div>

                        <div class="dropdown-divider"></div>

                        <!-- Logout -->
                        <div class="dropdown-section">
                            <a href="@Url.Action("Logout", "Home")" class="dropdown-item logout">
                                <svg class="dropdown-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                </svg>
                                <span>Logout</span>
                            </a>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card success animate-in">
                    <div class="stat-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="stat-label">Compliance Rate</div>
                    <div class="stat-value">@Model.Stats.ComplianceRate.ToString("F0")%</div>
                    <div class="stat-trend positive">
                        <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                        On target for 95% goal
                    </div>
                </div>

                <div class="stat-card animate-in">
                    <div class="stat-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                        </svg>
                    </div>
                    <div class="stat-label">Total Submissions</div>
                    <div class="stat-value">@Model.Stats.CompletedTasks</div>
                    <div class="stat-trend">
                        of @Model.Stats.TotalTasks declarations
                    </div>
                </div>

                @if (Model.Stats.OutstandingTasks > 0)
                {
                    <div class="stat-card warning animate-in">
                        <div class="stat-icon">
                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div class="stat-label">Action Required</div>
                        <div class="stat-value">@Model.Stats.OutstandingTasks</div>
                        <div class="stat-trend">
                            @(Model.Stats.OutstandingTasks == 1 ? "declaration" : "declarations") pending
                        </div>
                    </div>
                }

                <div class="stat-card @(Model.Stats.CurrentStreak >= 3 ? "success" : "") animate-in">
                    <div class="stat-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" />
                        </svg>
                    </div>
                    <div class="stat-label">Current Streak</div>
                    <div class="stat-value">@Model.Stats.CurrentStreak</div>
                    <div class="stat-trend @(Model.Stats.CurrentStreak >= 3 ? "positive" : "")">
                        @(Model.Stats.CurrentStreak >= 3 ? "🔥 Great compliance!" : "Keep it going!")
                    </div>
                </div>
            </div>

            <!-- Tabbed Content Area -->
            <div class="tabs-container animate-in">
                <div class="tabs-header">
                    <button class="tab-button active" data-tab="active-tasks">
                        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                        </svg>
                        Active Tasks
                        @if (Model.Stats.OutstandingTasks > 0)
                        {
                            <span class="status-badge outstanding" style="margin-left: auto;">@Model.Stats.OutstandingTasks</span>
                        }
                    </button>

                    <button class="tab-button" data-tab="history">
                        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Submission History
                    </button>

                    <button class="tab-button" data-tab="help">
                        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
                        </svg>
                        Help & Resources
                    </button>

                    @if (Model.IsLineManager)
                    {
                        <button class="tab-button" data-tab="team-approvals">
                            <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                            </svg>
                            Team Approvals
                            @{
                                var pendingApprovals = Model.Subordinates.SelectMany(s => s.Tasks).Count(t => t.Status == "Submitted");
                            }
                            @if (pendingApprovals > 0)
                            {
                                <span class="status-badge outstanding" style="margin-left: auto;">@pendingApprovals</span>
                            }
                        </button>
                    }
                </div>

                <!-- Active Tasks Tab -->
                <div class="tab-content active" id="active-tasks">
                    @if (Model.HasPendingTasks)
                    {
                        <div class="tasks-list">
                            @foreach (var task in Model.Tasks.Where(t => t.Status == "Outstanding"))
                            {
                                var isOverdue = task.DueDate < DateTime.UtcNow;
                                var daysUntilDue = (task.DueDate - DateTime.UtcNow).Days;

                                <div class="task-card @(isOverdue ? "overdue" : "")">
                                    <div class="task-status-indicator @(isOverdue ? "overdue" : "pending")">
                                        @if (isOverdue)
                                        {
                                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                        }
                                    </div>

                                    <div class="task-details">
                                        <div class="task-header">
                                            <div>
                                                <h3 class="task-title">@task.Template.TemplateName</h3>
                                                <div class="task-meta">
                                                    <div class="meta-item">
                                                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                                                        </svg>
                                                        <span>Due: @task.DueDate.ToString("MMM dd, yyyy")</span>
                                                    </div>
                                                    @if (!isOverdue && daysUntilDue <= 7)
                                                    {
                                                        <div class="meta-item" style="color: #F59E0B;">
                                                            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                            </svg>
                                                            <span>@daysUntilDue days remaining</span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <span class="status-badge @(isOverdue ? "overdue" : "outstanding")">
                                                <span class="status-dot"></span>
                                                @(isOverdue ? "Overdue" : "Pending")
                                            </span>
                                        </div>

                                        <p class="task-description">
                                            Complete your annual Declaration of Interest as required by organizational policy.
                                            This helps maintain transparency and compliance standards.
                                        </p>

                                        <div class="task-actions">
                                            <a href="@Url.Action("Task", "Employee", new { token = task.AccessToken })"
                                               class="btn btn-primary">
                                                <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                                </svg>
                                                Complete Declaration
                                            </a>

                                            @if (task.Status == "Draft")
                                            {
                                                <button class="btn btn-ghost">
                                                    <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                                                    </svg>
                                                    Continue Draft
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <svg class="empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <h3 class="empty-title">All caught up! 🎉</h3>
                            <p class="empty-message">
                                You don't have any pending declarations at the moment.
                                Great job staying on top of your compliance requirements!
                            </p>
                        </div>
                    }
                </div>

                <!-- History Tab -->
                <div class="tab-content" id="history">
                    <div class="compliance-timeline">
                        @foreach (var task in Model.Tasks.Where(t => t.Status == "Submitted" || t.Status == "Reviewed").OrderByDescending(t => t.DueDate))
                        {
                            <div class="timeline-item @(task.Status == "Reviewed" ? "completed" : "")">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <div class="timeline-date">@task.DueDate.ToString("MMMM dd, yyyy")</div>
                                    <div class="timeline-title">@task.Template.TemplateName</div>
                                    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 12px;">
                                        <span class="status-badge @(task.Status.ToLower())">
                                            @task.Status
                                        </span>
                                        <button class="btn btn-ghost" style="padding: 8px 16px; font-size: 0.85rem;">
                                            View Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!Model.Tasks.Any(t => t.Status == "Submitted" || t.Status == "Reviewed"))
                        {
                            <div class="empty-state">
                                <svg class="empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <h3 class="empty-title">No submission history yet</h3>
                                <p class="empty-message">
                                    Your completed declarations will appear here once you submit them.
                                </p>
                            </div>
                        }
                    </div>
                </div>


                @if (Model.IsLineManager)
                {
                    <!-- Team Approvals Tab -->
                    <div class="tab-content" id="team-approvals">
                        @if (Model.Subordinates.Any())
                        {
                            <div class="section">
                                <div class="section-header">
                                    <h2 class="section-title">Team Compliance Overview</h2>
                                    <button class="btn btn-ghost" style="padding: 0.625rem 1.5rem;">
                                        <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                            <path d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                                        </svg>
                                        Export Report
                                    </button>
                                </div>

                                <div class="executive-table-wrapper">
                                    <table class="executive-table">
                                        <thead>
                                            <tr>
                                                <th>Employee</th>
                                                <th class="text-center">Template</th>
                                                <th class="text-center">Due Date</th>
                                                <th class="text-center">Submitted</th>
                                                <th class="text-center">Status</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sub in Model.Subordinates)
                                            {
                                                @foreach (var task in sub.Tasks)
                                                {
                                                    var isOverdue = task.IsOverdue;
                                                    <tr>
                                                        <td>
                                                            <div class="table-dept">
