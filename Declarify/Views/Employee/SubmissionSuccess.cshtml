<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submission Successful - Declarify</title>
    <link rel="stylesheet" href="~/css/employee-dashboard.css">
    <link href="~/css/submissionsucesscss.css" rel="stylesheet" />
</head>
<body>
    <!-- Modal Backdrop -->
    <div class="modal-backdrop" id="successModal">
        <!-- Animated confetti -->
        @for (int i = 0; i < 20; i++)
        {
            <div class="confetti" style="left: @(i * 5)%; animation-delay: @(i * 0.1)s;"></div>
        }

        <!-- Modal Container -->
        <div class="modal-container">
            <div class="success-card">
                <!-- Close button -->
                <button class="modal-close" onclick="closeModal()" aria-label="Close">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                <!-- Animated Icon with Brand Colors -->
                <div class="success-icon">
                    <div class="icon-ring"></div>
                    <div class="icon-ring-outer"></div>
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                </div>

                <h1 class="success-title">
                    Submission <span class="title-accent">Clarified!</span>
                </h1>

                <p class="success-message">
                    Thank you for completing your Declaration of Interest. Your submission has been recorded
                    and will be reviewed by your manager.
                </p>

                <!-- Details with Brand Styling -->
                <div class="success-details">
                    <div class="detail-row">
                        <span class="detail-label">
                            <svg class="detail-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            Submission Date
                        </span>
                        <span class="detail-value">@DateTime.Now.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">
                            <svg class="detail-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Submission Time
                        </span>
                        <span class="detail-value">@DateTime.Now.ToString("hh:mm tt")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">
                            <svg class="detail-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Status
                        </span>
                        <span class="detail-value status-badge">
                            <span class="status-dot"></span>
                            Submitted
                        </span>
                    </div>
                </div>

                <!-- Next Steps with Enhanced Branding -->
                <div class="next-steps">
                    <h3>What happens next?</h3>
                    <ul>
                        <li>
                            <div class="step-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                                </svg>
                            </div>
                            <span>Your manager will review your declaration</span>
                        </li>
                        <li>
                            <div class="step-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                                </svg>
                            </div>
                            <span>You'll receive a confirmation email shortly</span>
                        </li>
                        <li>
                            <div class="step-icon">
                                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                                </svg>
                            </div>
                            <span>You can track the status on your dashboard</span>
                        </li>
                    </ul>
                </div>

                <!-- Action Buttons -->
                <div class="modal-actions">
                    <a href="@Url.Action("Dashboard", "Employee")" class="btn btn-primary">
                        <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                        </svg>
                        Return to Dashboard
                    </a>

                    <button onclick="window.print()" class="btn btn-ghost">
                        <svg class="btn-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0110.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0l.229 2.523a1.125 1.125 0 01-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0021 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 00-1.913-.247M6.34 18H5.25A2.25 2.25 0 013 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 011.913-.247m10.5 0a48.536 48.536 0 00-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18 10.5h.008v.008H18V10.5zm-3 0h.008v.008H15V10.5z" />
                        </svg>
                        Print Confirmation
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Create additional confetti with brand colors
        function createConfetti() {
            const colors = ['#00C2CB', '#00E5FF', '#081B38', '#10B981'];
            const container = document.getElementById('successModal');

            for (let i = 0; i < 30; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDelay = Math.random() * 3 + 's';
                confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                container.appendChild(confetti);
            }
        }

        function closeModal() {
            const modal = document.getElementById('successModal');
            modal.style.animation = 'fadeOut 0.3s ease';
            setTimeout(() => {
                window.location.href = '@Url.Action("Dashboard", "Employee")';
            }, 300);
        }

        // Close on backdrop click
        document.querySelector('.modal-backdrop').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Close on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        createConfetti();
    </script>
</body>
</html>